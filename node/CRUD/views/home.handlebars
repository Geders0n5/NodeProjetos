<body id="corpo">
    <div class="col-8 mt-2 principal">
        <h2 class="alert alert-primary">Login - Entrar no sistema</h1>
        <form method="POST" action="/valid">
            <div class="form-group col-12">
                <label for="iCpf">CPF</label>
                <input type="text" class="form-control" name="nCpf" id="iCpf" placeholder="000.000.000-00"/>
                <label for="iSenha">Senha</label>
                <input type="password" class="form-control" name="nSenha" id="iSenha" placeholder="********"/>
                <button type="submit" class="btn btn-primary">Entrar</button>
                <a href="/cadastro">
                    <button type="button" class="btn btn-success">Cadastre-se</button>
                </a> 
            </div>
        </form>
    </div>
</body>
